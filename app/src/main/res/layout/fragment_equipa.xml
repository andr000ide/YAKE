<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:id="@+id/nested"
        tools:context=".MainActivity">


    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:id="@+id/linearlayout"
                  android:orientation="vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/know_team"
                android:textAlignment="center"
                android:paddingTop="15dp"
                android:textSize="35dp"
                android:textStyle="bold"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/equipaTexto"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="16sp"
        />


        <androidx.recyclerview.widget.RecyclerView
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rec_view"
        />
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:tools="http://schemas.android.com/tools"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      tools:context=".Fragments.fragment_credits"
                      android:orientation="vertical">
            <View
                    style="@style/InputBorder"
                    android:id="@+id/breaLine1"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/creditos_texto"
                    android:textAlignment="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"

                    android:textSize="16dp"
            />

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent" android:layout_height="wrap_content"

                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:id="@+id/parent_layout">
                <View
                        style="@style/InputBorder"
                        android:id="@+id/breaLine"
                />
                <de.hdodenhof.circleimageview.CircleImageView

                        android:layout_below="@id/breaLine"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/image"
                        android:layout_centerHorizontal="true"
                        app:civ_border_color="#4FC1EA"
                        app:civ_border_width="2dp"

                />


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="João Campos"
                        android:layout_below="@id/image"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="15dp"
                        android:id="@+id/nome"
                        android:textColor="#000000"
                        android:layout_centerVertical="true"
                        android:textSize="18dp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mobile_developer"
                        android:layout_below="@id/nome"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:paddingTop="15dp"
                        android:id="@+id/cargo"
                        android:textColor="#000000"
                        android:layout_centerVertical="true"
                        android:textSize="18dp"
                />
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_below="@id/cargo"
                              android:layout_centerHorizontal="true"
                              android:layout_marginTop="5dp"
                              android:id="@+id/linearButtons">


                    <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="100dp"
                            android:layout_marginEnd="100dp"
                            android:id="@+id/img_linkedin_joao"/>
                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="100dp"
                            android:layout_marginEnd="100dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/img_github_joao"/>

                    <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/img_mail_joao"
                    />


                </LinearLayout>


            </RelativeLayout>
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:id="@+id/parent_layout2">
                <View
                        style="@style/InputBorder"
                        android:id="@+id/breaLine2"
                />
                <de.hdodenhof.circleimageview.CircleImageView

                        android:layout_below="@id/breaLine2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/image2"
                        android:layout_centerHorizontal="true"
                        app:civ_border_color="#4FC1EA"
                        app:civ_border_width="2dp"

                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Simão Samouco"
                        android:layout_below="@id/image2"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="15dp"
                        android:id="@+id/nome2"
                        android:textColor="#000000"
                        android:layout_centerVertical="true"
                        android:textSize="18dp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mobile_developer"
                        android:layout_below="@id/nome2"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:paddingTop="15dp"
                        android:id="@+id/cargo2"
                        android:textColor="#000000"
                        android:layout_centerVertical="true"
                        android:textSize="18dp"
                />
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_below="@id/cargo2"
                              android:layout_centerHorizontal="true"
                              android:layout_marginTop="5dp"
                              android:id="@+id/linearButtons2">

                    <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="100dp"
                            android:layout_marginEnd="100dp"
                            android:id="@+id/img_linkedin2_simao"/>
                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="100dp"
                            android:layout_marginEnd="100dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/img_github2_simao"/>
                    <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/img_mail2_simao"
                    />

                </LinearLayout>


            </RelativeLayout>



        </LinearLayout>
    </LinearLayout>





</androidx.core.widget.NestedScrollView>