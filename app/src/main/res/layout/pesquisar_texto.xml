<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/backgroundMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintclick"
            android:layout_width="match_parent"
            android:background="@color/backgroundMain"
            android:padding="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:layout_height="wrap_content">


    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="parent"
              android:id="@+id/titulo"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:textColor="#FFFFFF"
              app:layout_constraintVertical_bias="0"
              android:text="@string/key_pesquisar_texto" android:gravity="center" android:textSize="40sp"/>


        <EditText
                app:layout_constraintTop_toBottomOf="@id/titulo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:background="@drawable/edit_text_border"
                android:hint="title"
                android:padding="10dp"
                android:gravity="top"
                android:id="@+id/titulo_parametro" />


        <EditText
                app:layout_constraintTop_toBottomOf="@id/titulo_parametro"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:minHeight="185dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_border"
                android:hint="content"
                android:padding="10dp"
                android:gravity="top"
                android:id="@+id/searchbar" />


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/info2"
                  android:paddingTop="10dp"
                  android:paddingStart="10dp"
                  app:layout_constraintTop_toBottomOf="@id/searchbar"
                  app:layout_constraintBottom_toTopOf="@id/constraint_seekbar"
                  app:layout_constraintStart_toStartOf="parent"
                  android:textColor="#FFFFFF"
                  android:text="Inform max ngram size:" android:gravity="center" android:textSize="25sp"/>


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_seekbar"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/info2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:thumbTint="#ffffff"
                android:progressBackgroundTint="#ffffff"
                android:progressTint="#ffffff"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/info"
                  android:paddingStart="10dp"
                  app:layout_constraintStart_toEndOf="@id/seekBar"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:textColor="#FFFFFF"
                  android:text="1" android:gravity="center" android:textSize="25sp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button android:id="@+id/btn_pesquisar"
                android:layout_marginTop="25dp"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:background="@drawable/initial_page_button"
                app:layout_constraintTop_toBottomOf="@id/constraint_seekbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Pesquisar"/>



    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.core.widget.NestedScrollView>